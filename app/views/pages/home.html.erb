
<div>
  <div class="landing_top mt-0"  >
    <div class="banner">
      <div class="sign in d-flex justify-content-end m-3">
        <% if user_signed_in? %>
          <%= render 'shared/navbar_home' %>
        <% else %>
          <%= link_to "Sign in", new_user_session_path, class: "btn-sign-in mt-3" %>
        <% end %>
      </div>

      <div class="container">
        <h1 class="h1-title" >Handy</h1>
        <h2 style="margin-left: 20px;">Solutions at hand</h2>
        <div>
          <%= simple_form_for :search, url: handymen_path, method: :get do |f| %>
            <div class="form-group mt-5">
              <input class="grow text-center border-0 shadow " type="text" name="search[query]" style="width: 400px; height: 40px; border-radius: 23px; background: rgb(206 220 207 / 18%)" placeholder="Find a Handy!"/>
              <button type="submit" class="btn-submit">
                <i class="fas fa-search fa-2x" style="color: #305349;"></i>
              </button>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<%# HOW IT WORKS %>
