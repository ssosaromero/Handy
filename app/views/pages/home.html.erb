  <div class="container">
    <div class="knowhow mt-5">
      <h3> How <strong>it works</strong></h3>
      <p> Find the most qualified person to help you at home</p>
    </div>
    <div class="row how-it-works">
      <div class="col-md-4 mt-6">
        <div class="card text-center" style="height: 350px">
          <img src="https://cdn.dribbble.com/users/1231153/screenshots/3433207/media/c9b2d44c27615cdb11487e792f4f7c03.gif" style="width: 100%;" alt="Pipe Burst">
          <h4>Need a fix?</h4>
        </div>
      </div>

      <div class="col-md-4 mt-6">
        <div class="card text-center" style="height: 350px">
          <img src="https://cdn.dribbble.com/users/12427466/screenshots/18761128/media/49deef9fb0a64fa9f136cf8aa76dbd1b.gif" style="width: 100%;" alt="Find handy">
          <h4>Search by location or skill</h4>
        </div>
      </div>

      <div class="col-md-4 mt-6">
        <div class="card text-center" style="height: 350px">
          <img src="https://cdn.dribbble.com/users/537878/screenshots/3517803/media/aab41504d52402e113194ee599fc71da.gif" style="width: 100%;" alt="Found">
          <h4>Find the right Handy</h4>
        </div>
      </div>
    </div>
  </div>
</div>

<%# CARDS SPACE %>
<div class="container" style="margin-top: 150px">
  <div class="knowhow my-5">
    <h3> Meet your ideal <strong>Handy</strong></h3>
    <p> Get in contact, book your appointment and solve all your problems at home</p>
  </div>
  <div class="row">
    <% @handyman.each do |handyman|%>
      <div class="col-md-4">
        <%= render 'shared/handyman_card', handyman: handyman %>
      </div>
    <% end %>
  </div>
</div>

