<%# SEARCH SPACE %>
<div class="container mt-4">
  <div class="d-flex justify-content-center">
    <%= simple_form_for :search, url: handymen_path, method: :get do |f| %>
      <div class="form-group">
        <input style="color: black" class="search-input grow text-center" type="text" name="search[query]" placeholder="Find a Handy!"/>
        <button type="submit" class="btn btn-success d-flex" style="margin-left: 1rem; border-radius: 23px; background-color: #FFE073; border: #FFE073;">
          <i class="fas fa-search fa-2x" style="color: #305349;"></i>
        </button>
      </div>
    <% end %>
  </div>
</div>

<div class="row">
  <%# CARDS %>
  <div class="cards col-12 col-lg-6">
    <% @handyman.each do |handyman|%>
      <%= render 'shared/handyman_card', handyman: handyman %>
    <% end %>
  </div>

  <%# MAPA %>
  <div class=" col-12 col-lg-6 position-sticky" style="width: 48%; height: 95vh; top: 20px; border-radius: 23px;"
    data-controller="mapbox"
    data-mapbox-markers-value="<%= @markers.to_json %>"
    data-mapbox-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>" >
  </div>
</div>

<%# FOOTER %>
<div>
  <%= render 'shared/footer' %>
</div>
