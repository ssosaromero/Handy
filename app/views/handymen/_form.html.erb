
<%= simple_form_for(@handyman) do |f| %>
  <ul>
    <% if @handyman.errors.any?%>
      <% @handyman.errors.full_messages.each do |error| %>
        <li><%= error %></li>
      <% end %>
    <% end %>
  </ul>

  <div class="form-inputs">
    <%= f.input :location,
                input_html: { data: { geocoder_target: "location" }, class: "d-none" },
                wrapper_html: { data: { controller: "geocoder", geocoder_api_key_value: ENV['MAPBOX_API_KEY'] } }%>
    <%= f.input :description %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class:"btn btn-success" %>
  </div>
<% end %>
